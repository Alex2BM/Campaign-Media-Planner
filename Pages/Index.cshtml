@page
@model CampaignMediaPlanner.Pages.IndexModel
@{
    ViewData["Title"] = "Campaign Media Planner";
}

<h2 class="text-center mb-4">Campaign Media Planner</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Total Campaign Budget (Z):</label>
                <input type="number" asp-for="TotalBudgetZ" class="form-control" step="0.01" required />
                <span asp-validation-for="TotalBudgetZ" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Agency Fee Percentage (Y1):</label>
                <input type="number" asp-for="AgencyFeeY1" class="form-control" step="0.01" required />
                <span asp-validation-for="AgencyFeeY1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Third-Party Tool Fee Percentage (Y2):</label>
                <input type="number" asp-for="ThirdPartyFeeY2" class="form-control" step="0.01" required />
                <span asp-validation-for="ThirdPartyFeeY2" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fixed Agency Hours Cost:</label>
                <input type="number" asp-for="FixedHoursCost" class="form-control" step="0.01" required />
                <span asp-validation-for="FixedHoursCost" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Other Ads Budgets:</label>
                <input type="number" asp-for="OtherAdsBudgets[0]" class="form-control mb-1" step="0.01" required placeholder="Ad 1 Budget" />
                <span asp-validation-for="OtherAdsBudgets[0]" class="text-danger"></span>
                <input type="number" asp-for="OtherAdsBudgets[1]" class="form-control mb-1" step="0.01" required placeholder="Ad 2 Budget" />
                <span asp-validation-for="OtherAdsBudgets[1]" class="text-danger"></span>
                <input type="number" asp-for="OtherAdsBudgets[2]" class="form-control mb-1" step="0.01" required placeholder="Ad 3 Budget" />
                <span asp-validation-for="OtherAdsBudgets[2]" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Calculate Max Ad Budget</button>
        </form>

        @if (Model.MaxAdBudget > 0)
        {
            <div class="alert alert-success mt-4">
                <strong>Maximum Budget for Specific Ad:</strong> @Model.MaxAdBudget.ToString("C")
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-4">@Model.ErrorMessage</div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
